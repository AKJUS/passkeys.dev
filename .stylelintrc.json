{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "no-empty-source": null,
    "string-quotes": "double",
    "scss/comment-no-empty": null,
    "max-line-length": null,
    "scss/at-extend-no-missing-placeholder": null,
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": [
          "bootstrap-icons"
        ]
      }
    ],
    "function-name-case": [
      "lower",
      {
        "ignoreFunctions": [
          "RGB"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "at-root",
          "debug",
          "warn",
          "error",
          "if",
          "else",
          "for",
          "each",
          "while",
          "mixin",
          "include",
          "content",
          "return",
          "function",
          "tailwind",
          "apply",
          "responsive",
          "variants",
          "screen"
        ]
      }
    ]
  }
}